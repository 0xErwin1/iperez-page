---
import Section from './Section.astro';
import cv from '@/cv';
import { Icons, IconsColor } from '@/enums/icons.enum';

const { name, label, image, profiles } = cv;
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
    <footer>
    {
      profiles.map((profile) => (
        <a
          href={profile.url}
          title={`Visit ${profile.username}'s profile on ${profile.name}`}
          target="_blank"
          rel="noopener noreferrer"
          class={`${IconsColor[profile.icon]}`}
        >
          <i class={`nf ${Icons[profile.icon]}`} />
        </a>
      ))
    }
    </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding-right: 32px;
  }

  h1 {
    margin-bottom: 0;
    font-size: 2rem;
    color: var(--yellow);
  }

  h2 {
    margin: 0;
    color: var(--yellow-mirage);
    font-weight: 500;
    font-size: 1.1rem;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 20px;
  }

  footer {
    margin-top: 8px;
    display: flex;
    gap: 4px;
  }

  footer a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 42px;
    width: 42px;
    font-size: 1.5rem;
    text-decoration: none;
  }

  footer a:hover {
    color: var(--white);
  }

  footer i {
    text-decoration: none;
  }

  @media (width <= 720px) {
    .container {
      flex-direction: column-reverse;
      align-items: center; 
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 1rem auto auto auto;
    }

    h2 {
      text-wrap: balance;
    }
  }
</style>
