---
import Section from '@/components/Section.astro';
import cv from '@/cv.json';
import { Icons, IconsColor } from '@/enums/icons.enum';
---

<Section title="Work experience" titleClass="experience-title">
  <ul>
    {
      cv.work.items.map((item) => {
        const startDate = new Date(item.startDate);
        const endDate = item.endDate && new Date(item.endDate);

        const startYear = startDate.getFullYear();
        const endYear = endDate ? endDate.getFullYear() : "Current";

        return (
          <li>
            <article>
              <header>
                <div class="company-info">
                  <div class="company-line">
                    <h3>{item.company}</h3>
                    <div class="links">
                      { item.website && (
                        <a
                          href={item.website}
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          <i class={`nf ${Icons.WEBSITE} ${IconsColor.WEBSITE}`} />
                        </a>
                      )}
                      { item.linkedin && (
                        <a
                          href={item.linkedin}
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          <i class={`nf ${Icons.LINKEDIN} ${IconsColor.LINKEDIN}`} />
                        </a>
                      )}
                    </div>
                  </div>

                  <h4>{item.position}</h4>
                </div>

                <div>
                  <time datetime={item.startDate} data-title={item.startDate}>
                    {startYear}
                  </time>
                  {" - "}
                  <time datetime={item.endDate ?? ""} data-title={item.endDate ?? ""}>
                    {endYear}
                  </time>
                </div>
              </header>

              <footer>
                <p>{item.summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
.experience-title {
  font-size: 2.25rem;
}

ul {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  list-style: none;
  margin: 0;
  padding: 0;
  max-width: 1000px;
  margin: 0 auto;
}

article {
  background: var(--gray-mirage);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

article:hover {
  transform: translateY(-2px);
  border-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

article h3 {
  font-weight: 600;
  font-size: 1.4rem;
  margin: 0;
  color: var(--yellow);
  letter-spacing: -0.5px;
}

article h4 {
  font-weight: 500;
  font-size: 1.15rem;
  margin: 0;
  color: var(--gray-light);
}

header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1.25rem;
}

.company-info {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.company-line {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.links {
  display: flex;
  gap: 0.5rem;
  margin: 0;
}

.links i {
  font-size: 1.4rem;
  transition: all 0.2s ease;
}

article a {
  text-decoration: none;
  color: var(--gray-light);
  transition: color 0.2s ease;
}

article a:hover {
  color: var(--white);
}

time {
  font-size: 1.1rem;
  color: var(--gray-light);
  position: relative;
  cursor: default;
}

footer p {
  margin: 0;
  font-size: 1.15rem;
  line-height: 1.6;
  color: var(--gray-light);
  padding-top: 1.25rem;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

[data-title]:hover::after {
  opacity: 1;
  visibility: visible;
}

[data-title]::after {
  content: attr(data-title);
  background-color: var(--gray-mirage);
  color: var(--white);
  font-size: 0.9rem;
  position: absolute;
  padding: 0.25rem 0.75rem;
  bottom: -1.8rem;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  opacity: 0;
  border: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 99999;
  visibility: hidden;
  border-radius: 20px;
  transition: all 0.2s ease;
}

/* Tablet breakpoint */
@media (min-width: 640px) {
  .experience-title {
    font-size: 2.5rem;
  }

  article {
    padding: 1.75rem;
  }

  article h3 {
    font-size: 1.5rem;
  }

  article h4 {
    font-size: 1.25rem;
  }

  .links i {
    font-size: 1.5rem;
  }

  time {
    font-size: 1.15rem;
  }

  footer p {
    font-size: 1.25rem;
    line-height: 1.7;
  }
}

/* Desktop breakpoint */
@media (min-width: 1024px) {
  .experience-title {
    font-size: 2.75rem;
  }

  article {
    padding: 2rem;
  }

  article h3 {
    font-size: 1.6rem;
  }

  article h4 {
    font-size: 1.35rem;
  }

  .links i {
    font-size: 1.6rem;
  }

  time {
    font-size: 1.2rem;
  }

  footer p {
    font-size: 1.35rem;
    line-height: 1.75;
  }

  article:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }
}
</style>
