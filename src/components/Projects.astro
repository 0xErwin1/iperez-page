---
import Section from '@/components/Section.astro';
import cv from '@/cv';
import { Icons, IconsColor } from '@/enums/icons.enum';

const { project } = cv;
---

<Section title="Projects" titleClass="project-title">
  {project.label && (
    <p class="project-label">{project.label}</p>
  )}

  <div class="project-grid">
    {
      project.repos.map((item) => {
        return (
          <div class="project-card">
            <header>
              <h3>{item.name}</h3>
              <span class={`badge ${item.visibility}`}>{item.visibility}</span>
            </header>

            <p class="description">{item.description}</p>

            <div class="meta">
              <span><i class="nf nf-fa-star start" /> {item.stars}</span>
              <span><i class="nf nf-fa-code_fork forks" /> {item.forks}</span>
              <span><i class={`nf ${Icons[item.language.icon]} ${IconsColor[item.language.icon]}`} /> {item.language.name}</span>
              {item.license && <span><i class="nf nf-fa-balance_scale" /> {item.license}</span>}
            </div>

            {item.tags.length > 0 && (
              <ul class="tags">
                {item.tags.map((tag) => (
                  <li>{tag}</li>
                ))}
              </ul>
            )}

            <footer>
              <a href={item.url} target="_blank" rel="noreferrer">
                <i class={`nf nf-fa-external_link`} />
                View Repo
              </a>
            </footer>
          </div>
        );
      })
    }
  </div>
</Section>

<style>
.project-label {
  font-size: 1rem;
  margin: 0.25rem 0 1rem;
  font-style: italic;
  line-height: 1.4;
}

.project-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
  margin-top: 1rem;
}

.project-card {
  background: var(--gray-mirage);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 1.25rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.project-card header {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.project-card h3 {
  font-size: 1.3rem;
  font-weight: 600;
  margin: 0;
  line-height: 1.3;
  color: var(--yellow);
}

.badge {
  font-size: 0.75rem;
  font-weight: 500;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  text-transform: capitalize;
  align-self: flex-start;
  letter-spacing: 0.5px;
}

.badge.public {
  background-color: var(--green);
}

.badge.private {
  background-color: var(--red);
}

.description {
  font-size: 1.1rem;
  min-height: 4rem;
  line-height: 1.5;
  color: var(--gray-light);
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  font-size: 1rem;
  padding: 0.5rem 0;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.meta span {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  color: var(--gray-light);
}

.meta i {
  font-size: 1.1em;
}

.start {
  color: var(--yellow);
}

.forks {
  color: var(--green);
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  padding: 0;
  margin: 0;
  list-style: none;
}

.tags li {
  background: rgba(255, 255, 255, 0.05);
  padding: 0.3rem 0.75rem;
  border-radius: 20px;
  font-size: 0.95rem;
  font-weight: 500;
  color: var(--yellow-mirage);
  transition: all 0.2s ease;
}

footer {
  margin-top: auto;
  padding-top: 0.5rem;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

footer a {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--yellow);
  font-weight: 500;
  text-decoration: none;
  font-size: 1rem;
  transition: all 0.2s ease;
  padding: 0.5rem 0;
}

footer a:hover {
  color: var(--white);
  transform: translateX(4px);
}

/* Tablet breakpoint */
@media (min-width: 640px) {
  .project-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .project-card {
    padding: 1.5rem;
  }

  .project-card h3 {
    font-size: 1.4rem;
  }

  .description {
    font-size: 1.15rem;
  }

  .meta {
    font-size: 1.05rem;
  }

  .tags li {
    font-size: 1rem;
  }
}

/* Desktop breakpoint */
@media (min-width: 1024px) {
  .project-grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .project-card header {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .tags li:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--white);
  }

  .project-card h3 {
    font-size: 1.5rem;
  }

  .description {
    font-size: 1.2rem;
  }

  .meta {
    font-size: 1.1rem;
  }

  .tags li {
    font-size: 1.05rem;
  }

  footer a {
    font-size: 1.1rem;
  }
}

.project-title {
  font-size: 2.25rem;
}

@media (min-width: 640px) {
  .project-title {
    font-size: 2.5rem;
  }
}

@media (min-width: 1024px) {
  .project-title {
    font-size: 2.75rem;
  }
}
</style>
