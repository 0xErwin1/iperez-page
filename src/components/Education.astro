---
import Section from '@/components/Section.astro';
import cv from '@/cv';

const { education } = cv;
---

<Section title="Education" titleClass="education-title">
  {education.label && (
    <p class="education-label">{education.label}</p>
  )}

  <div class="education-courses">
    <h3>Certificates</h3>
    <ul>
      {education.certificates.map((course) => {
        return (
          <li>
            <article>
              <header>
                <div class="cert-info">
                  <h4>
                    <a href={course.url} target="_blank" rel="noreferrer">
                    {course.name}
                      <i class="nf nf-oct-link_external" />
                    </a>
                  </h4>
                  <p class="company">{course.company}</p>
                </div>
                <div class="date-and-link">
                  <time datetime={course.date} data-title={course.date}>
                    {course.date}
                  </time>
                </div>
              </header>
            </article>
          </li>
        );
      })}
    </ul>
  </div>
</Section>

<style>
.education-label {
  font-size: 0.85rem;
  margin: 0.25rem 0 1rem;
  font-style: italic;
}

.education-courses {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 0.5rem;
}

.education-courses h3 {
  color: var(--yellow);
  margin-bottom: 0.5rem;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

li article header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.cert-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.cert-info h4 {
  margin: 0;
  font-weight: 600;
  font-size: 1rem;
}

.company {
  margin: 0;
  font-weight: 400;
  color: var(--gray-light);
  font-size: 0.95rem;
}

.date-and-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.date-and-link time {
  font-size: 0.85rem;
  position: relative;
  cursor: default;
}

li a {
  text-decoration: none;
  color: inherit;
}

li i {
  font-size: 1rem;
}

li a:hover {
  color: var(--white);
}

[data-title]:hover::after {
  opacity: 1;
  visibility: visible;
}

[data-title]::after {
  content: attr(data-title);
  background-color: var(--gray-mirage);
  color: var(--white);
  font-size: 0.75rem;
  position: absolute;
  padding: 0.2rem 0.5rem;
  bottom: -1.6rem;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  box-shadow: 1px 1px 1px #222;
  opacity: 0;
  border: 1px solid #111;
  z-index: 99999;
  visibility: hidden;
  border-radius: 6px;
  transition: opacity 0.2s ease-in-out;
}

@media (width <= 720px) {
  li article header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }
  .date-and-link {
    margin-top: 0.25rem;
  }
}
</style>

