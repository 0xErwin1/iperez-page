{
  "name": "iperez-page",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "serve dist -s -n -L -p $PORT",
    "postinstall": "husky install",
    "lint": "yarn rome check src/**/{*.ts,*.tsx}",
    "format": "yarn rome format --write --config-path=. src/**/{*.ts,*.tsx}"
  },
  "dependencies": {
    "@octokit/core": "^5.0.0",
    "axios": "^1.5.0",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "rome": "^12.1.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format"
    }
  },
  "engines": {
    "node": "18.16"
  }
}
